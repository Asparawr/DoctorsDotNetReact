@model List<doctors.Models.ReportModel>

@{
    ViewData["Title"] = "Report";
}

<h1>Report</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Doctor Name
            </th>
            <th>
                Total Work Hours
            </th>
            <th>
                Visit Count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitCount)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>